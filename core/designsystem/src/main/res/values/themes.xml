<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TelePigeon" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/Theme.TelePigeon.BottomSheetDialog</item>
    </style>

    <style name="Theme.TelePigeon" parent="Base.Theme.TelePigeon" />

    <!-- Button -->
    <style name="Theme.TelePigeon.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Theme.TelePigeon.Button.Small" parent="Theme.TelePigeon.Button">
        <item name="android:layout_height">@dimen/button_height_small</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TelePigeon.Cap.Bold.12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/monstera</item>
    </style>

    <style name="Theme.TelePigeon.Button.Common" parent="Theme.TelePigeon.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAppearance">@style/TextAppearance.TelePigeon.Sub.Semi.18</item>
        <item name="android:textColor">@color/g_10</item>
    </style>

    <style name="Theme.TelePigeon.Button.Select" parent="Theme.TelePigeon.Button">
        <item name="android:textAppearance">@style/TextAppearance.TelePigeon.Sub.Semi.18</item>
        <item name="android:backgroundTint">@color/selector_all_btn_select_background</item>
        <item name="android:textColor">@color/selector_all_btn_select_text_color</item>
    </style>

    <style name="Theme.TelePigeon.Button.Outlined" parent="Theme.TelePigeon.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:strokeWidth">@dimen/button_stroke_width</item>
    </style>

    <style name="Theme.TelePigeon.Button.Outlined.G06" parent="Theme.TelePigeon.Button">
        <item name="android:textAppearance">@style/TextAppearance.TelePigeon.Sub.Bold.18</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/button_stroke_width</item>
        <item name="strokeColor">@color/g_06</item>
        <item name="android:textColor">@color/g_06</item>
    </style>

    <!-- Chip -->
    <style name="Theme.TelePigeon.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:stateListAnimator">@null</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:checked">false</item>
        <item name="chipMinHeight">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Theme.TelePigeon.Chip.All" parent="Theme.TelePigeon.Chip">
        <item name="cornerRadius">50dp</item>
        <item name="textStartPadding">20dp</item>
        <item name="textEndPadding">20dp</item>
        <item name="chipBackgroundColor">@color/selector_all_chip_select_background</item>
        <item name="android:textColor">@color/selector_all_chip_select_text_color</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.TelePigeon.Cap.Bold.12</item>
    </style>

    <!-- BottomSheetDialog -->
    <style name="Theme.TelePigeon.BottomSheetDialog.ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.TelePigeon.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Theme.TelePigeon.BottomSheetDialog.ShapeAppearance</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.TelePigeon.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.TelePigeon.BottomSheet</item>
    </style>

    <!-- Splash -->
    <style name="Theme.TelePigeon.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lemon</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.TelePigeon</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Calendar View -->
    <style name="Theme.TelePigeon.Calendar" parent="Theme.TelePigeon">
        <item name="colorAccent">@color/lemon</item>
    </style>

    <style name="Theme.TelePigeon.Calendar.Text" parent="Theme.TelePigeon">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
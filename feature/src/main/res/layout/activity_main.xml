<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_main_all_navi"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/view_main_all_navi_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_all" />

    <View
        android:id="@+id/view_main_all_navi_shadow"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/shape_gradient_radius_top_12"
        app:layout_constraintBottom_toTopOf="@id/bnv_main_all_navi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_main_all_navi"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navi_height"
        android:background="@drawable/shape_border_radius_top_12"
        android:paddingBottom="24dp"
        app:itemActiveIndicatorStyle="@android:color/transparent"
        app:itemBackground="@android:color/transparent"
        app:itemIconTint="@drawable/selector_all_navi_color"
        app:itemPaddingBottom="4dp"
        app:itemPaddingTop="17dp"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextAppearanceActive="@style/TextAppearance.TelePigeon.Cap.Semi.12"
        app:itemTextAppearanceInactive="@style/TextAppearance.TelePigeon.Cap.Semi.12"
        app:itemTextColor="@drawable/selector_all_navi_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_all_navi" />

</androidx.constraintlayout.widget.ConstraintLayout>
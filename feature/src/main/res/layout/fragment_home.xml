<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/horizontal_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/horizontal_margin" />

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/home_title"
        android:textAppearance="@style/TextAppearance.TelePigeon.Title.Extra.40"
        android:textColor="@color/g_10"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_description"
        android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
        android:textColor="@color/g_06"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title" />

    <ImageView
        android:id="@+id/iv_home_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_setting_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_title"
        app:layout_constraintEnd_toStartOf="@id/gl_end"
        app:layout_constraintTop_toTopOf="@id/tv_home_title" />

    <TextView
        android:id="@+id/tv_home_add_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_radius_12"
        android:backgroundTint="@color/monstera"
        android:paddingHorizontal="14dp"
        android:paddingVertical="6dp"
        android:text="@string/home_add"
        android:textAppearance="@style/TextAppearance.TelePigeon.Cap.Bold.12"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@id/tv_home_description" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_room"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/tv_home_modify"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_home_add_room"
        tools:listitem="@layout/item_home_room" />

    <TextView
        android:id="@+id/tv_home_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:background="@drawable/shape_border_radius_12"
        android:backgroundTint="@color/g_01"
        android:paddingHorizontal="14dp"
        android:paddingVertical="6dp"
        android:text="@string/home_modify"
        android:textAppearance="@style/TextAppearance.TelePigeon.Cap.Bold.12"
        android:textColor="@color/g_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_start" />

    <ImageView
        android:id="@+id/iv_home_room_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_character_sad"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_home_room_empty"
        app:layout_constraintEnd_toStartOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toTopOf="@id/rv_home_room"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_home_room_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/home_room_empty"
        android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
        android:textColor="@color/g_07"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rv_home_room"
        app:layout_constraintEnd_toEndOf="@id/iv_home_room_empty"
        app:layout_constraintStart_toStartOf="@id/iv_home_room_empty"
        app:layout_constraintTop_toBottomOf="@id/iv_home_room_empty" />

</androidx.constraintlayout.widget.ConstraintLayout>
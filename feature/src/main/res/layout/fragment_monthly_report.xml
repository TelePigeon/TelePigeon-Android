<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/horizontal_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/horizontal_margin" />

    <com.dongguk.telepigeon.design.system.component.TelePigeonAppBar
        android:id="@+id/appbar_monthly_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_monthly_report_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.TelePigeon.Title.Semi.24"
        android:textColor="@color/g_10"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/appbar_monthly_report"
        tools:text="5월 보고서" />

    <TextView
        android:id="@+id/tv_monthly_report_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/monthly_report_content"
        android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
        android:textColor="@color/g_06"
        app:layout_constraintEnd_toStartOf="@+id/gl_end"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_monthly_report_title" />

    <TextView
        android:id="@+id/tv_monthly_report_positive_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/monthly_report_positive_keyword"
        android:textAppearance="@style/TextAppearance.TelePigeon.Title.Semi.20"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_monthly_report_positive_keyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_border_radius_10"
        android:backgroundTint="@color/marble"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_positive_keyword">

        <TextView
            android:id="@+id/tv_monthly_report_positive_keyword_rank_1_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/monthly_report_rank_1"
            android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
            android:textColor="@color/g_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_monthly_report_positive_keyword_rank_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="18dp"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_monthly_report_positive_keyword_rank_1_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_monthly_report_positive_keyword_rank_1_title"
            app:layout_constraintTop_toTopOf="@id/tv_monthly_report_positive_keyword_rank_1_title"
            tools:text="운동" />

        <TextView
            android:id="@+id/tv_monthly_report_positive_keyword_rank_2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/monthly_report_rank_2"
            android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
            android:textColor="@color/g_10"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_positive_keyword_rank_1_title"
            app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_positive_keyword_rank_1_title" />

        <TextView
            android:id="@+id/tv_monthly_report_positive_keyword_rank_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_monthly_report_positive_keyword_rank_2_title"
            app:layout_constraintEnd_toEndOf="@id/tv_monthly_report_positive_keyword_rank_1"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_positive_keyword_rank_1"
            app:layout_constraintTop_toTopOf="@id/tv_monthly_report_positive_keyword_rank_2_title"
            tools:text="-" />

        <TextView
            android:id="@+id/tv_monthly_report_positive_keyword_rank_3_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/monthly_report_rank_3"
            android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_positive_keyword_rank_2_title"
            app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_positive_keyword_rank_2_title" />

        <TextView
            android:id="@+id/tv_monthly_report_positive_keyword_rank_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_monthly_report_positive_keyword_rank_3_title"
            app:layout_constraintEnd_toEndOf="@id/tv_monthly_report_positive_keyword_rank_2"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_positive_keyword_rank_2"
            app:layout_constraintTop_toTopOf="@id/tv_monthly_report_positive_keyword_rank_3_title"
            tools:text="-" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_monthly_report_negative_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/monthly_report_negative_keyword"
        android:textAppearance="@style/TextAppearance.TelePigeon.Title.Semi.20"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/layout_monthly_report_positive_keyword" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_monthly_report_negative_keyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_border_radius_10"
        android:backgroundTint="@color/marble"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_negative_keyword">

        <TextView
            android:id="@+id/tv_monthly_report_negative_keyword_rank_1_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/monthly_report_rank_1"
            android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
            android:textColor="@color/g_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_monthly_report_negative_keyword_rank_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="18dp"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_monthly_report_negative_keyword_rank_1_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_monthly_report_negative_keyword_rank_1_title"
            app:layout_constraintTop_toTopOf="@id/tv_monthly_report_negative_keyword_rank_1_title"
            tools:text="운동" />

        <TextView
            android:id="@+id/tv_monthly_report_negative_keyword_rank_2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/monthly_report_rank_2"
            android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
            android:textColor="@color/g_10"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_negative_keyword_rank_1_title"
            app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_negative_keyword_rank_1_title" />

        <TextView
            android:id="@+id/tv_monthly_report_negative_keyword_rank_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_monthly_report_negative_keyword_rank_2_title"
            app:layout_constraintEnd_toEndOf="@id/tv_monthly_report_negative_keyword_rank_1"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_negative_keyword_rank_1"
            app:layout_constraintTop_toTopOf="@id/tv_monthly_report_negative_keyword_rank_2_title"
            tools:text="-" />

        <TextView
            android:id="@+id/tv_monthly_report_negative_keyword_rank_3_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/monthly_report_rank_3"
            android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_negative_keyword_rank_2_title"
            app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_negative_keyword_rank_2_title" />

        <TextView
            android:id="@+id/tv_monthly_report_negative_keyword_rank_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toBottomOf="@id/tv_monthly_report_negative_keyword_rank_3_title"
            app:layout_constraintEnd_toEndOf="@id/tv_monthly_report_negative_keyword_rank_2"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_report_negative_keyword_rank_2"
            app:layout_constraintTop_toTopOf="@id/tv_monthly_report_negative_keyword_rank_3_title"
            tools:text="-" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_monthly_report_check"
        style="@style/Theme.TelePigeon.Button.Select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/button_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_monthly_report_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_character_sad_bold"
        app:layout_constraintBottom_toTopOf="@id/tv_monthly_report_empty"
        app:layout_constraintEnd_toStartOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_monthly_report_content"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_monthly_report_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/monthly_report_empty"
        android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
        android:textColor="@color/g_07"
        app:layout_constraintBottom_toTopOf="@+id/btn_monthly_report_check"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/iv_monthly_report_empty" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_home_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_border_radius_20"
        android:backgroundTint="@color/marble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_home_room_emotion"
            android:layout_width="86dp"
            android:layout_height="90dp"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_character_letter" />

        <TextView
            android:id="@+id/tv_home_room_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="12dp"
            android:textAppearance="@style/TextAppearance.TelePigeon.Title.Semi.20"
            android:textColor="@color/g_10"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_room_relation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_home_room_emotion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="디스이즈방이름" />

        <TextView
            android:id="@+id/tv_home_room_relation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.14"
            android:textColor="@color/g_06"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_room_answer_description"
            app:layout_constraintEnd_toEndOf="@+id/tv_home_room_name"
            app:layout_constraintStart_toStartOf="@+id/tv_home_room_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_room_name"
            tools:text="김둘기(관계없음/관계없음)" />

        <TextView
            android:id="@+id/tv_home_room_answer_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/TextAppearance.TelePigeon.Body.Semi.14"
            android:textColor="@color/g_09"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_home_room_relation"
            app:layout_constraintStart_toStartOf="@+id/tv_home_room_relation"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_room_relation"
            tools:text="아직 답변을 하지 않았어요" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
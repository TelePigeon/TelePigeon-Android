<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/shape_border_radius_10"
    android:backgroundTint="@color/marble">

    <TextView
        android:id="@+id/tv_worry_setting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="@string/setting_worry_setting_name"
        android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
        android:textColor="@color/g_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_worry_setting_name_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="10dp"
        android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
        android:textColor="@color/g_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_worry_setting_name"
        app:layout_constraintEnd_toStartOf="@+id/iv_worry_setting_delete"
        app:layout_constraintStart_toEndOf="@id/tv_worry_setting_name"
        app:layout_constraintTop_toTopOf="@id/tv_worry_setting_name"
        tools:text="영양제 챙겨먹기" />

    <ImageView
        android:id="@+id/iv_worry_setting_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_setting_delete_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_worry_setting_name" />

    <TextView
        android:id="@+id/tv_worry_setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/setting_worry_setting_content"
        android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
        android:textColor="@color/g_10"
        app:layout_constraintStart_toStartOf="@+id/tv_worry_setting_name"
        app:layout_constraintTop_toBottomOf="@id/tv_worry_setting_name" />

    <TextView
        android:id="@+id/tv_worry_setting_content_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
        android:textColor="@color/g_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_worry_setting_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_worry_setting_name_content"
        app:layout_constraintStart_toStartOf="@id/tv_worry_setting_name_content"
        app:layout_constraintTop_toTopOf="@id/tv_worry_setting_content"
        tools:text="오늘 영양제 챙겨먹었어?" />

    <TextView
        android:id="@+id/tv_worry_setting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:text="@string/setting_worry_setting_time"
        android:textAppearance="@style/TextAppearance.TelePigeon.Sub.Semi.16"
        android:textColor="@color/g_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_worry_setting_content"
        app:layout_constraintTop_toBottomOf="@id/tv_worry_setting_content" />

    <TextView
        android:id="@+id/tv_worry_setting_time_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.TelePigeon.Body.Med.16"
        android:textColor="@color/g_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_worry_setting_time"
        app:layout_constraintEnd_toEndOf="@+id/tv_worry_setting_content_content"
        app:layout_constraintStart_toStartOf="@id/tv_worry_setting_content_content"
        app:layout_constraintTop_toTopOf="@id/tv_worry_setting_time"
        tools:text="매일 9시" />

</androidx.constraintlayout.widget.ConstraintLayout>